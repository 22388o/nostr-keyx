{
  "manifest_version": 3,

  "name": "nostr-keyx",
  "version": "1.2.0",
  "description": "A NIP-07 browser extension that uses the OS's native keychain application to protect your private keys.",
  "author": "Susumu OTA",
  "homepage_url": "https://github.com/susumuota/nostr-keyx",

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://iris.to/*",
        "https://snort.social/*",
        "http://localhost/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_title": "nostr-keyx",
    "default_popup": "popup.html"
  },

  "permissions": [
    "nativeMessaging",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "https://iris.to/*",
    "https://snort.social/*",
    "http://localhost/*"
  ]
}
